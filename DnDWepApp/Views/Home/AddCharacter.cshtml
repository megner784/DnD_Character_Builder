@model DnDWepApp.Models.CharacterEntity

@{
    ViewData["Title"] = "Create Character";
}

<h4>Create Character</h4>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCharacter">

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
                <label asp-for="CharacterName" class="control-label">Character Name</label>
                <input asp-for="CharacterName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PlayerName" class="control-label">Player Name</label>
                <input asp-for="PlayerName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Race" class="control-label"></label>
                <select asp-for="Race" asp-items="@(new SelectList(ViewBag.RaceList,"RaceID","RaceName",""))" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CharacterClass" class="control-label">Class</label>
                <select asp-for="CharacterClass" asp-items="@(new SelectList(ViewBag.ClassList,"ClassID","ClassName",""))" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <input asp-for="Level" class="form-control" min="1" max="20"/>
            </div>
            <div class="form-group">
                <label asp-for="Strength" class="control-label"></label>
                <input asp-for="Strength" class="form-control" min="3" max="30" />
            </div>
            <div class="form-group">
                <label asp-for="Dexterity" class="control-label"></label>
                <input asp-for="Dexterity" class="form-control" min="3" max="30" />
            </div>
            <div class="form-group">
                <label asp-for="Constitution" class="control-label"></label>
                <input asp-for="Constitution" class="form-control" min="3" max="30" />
            </div>
            <div class="form-group">
                <label asp-for="Intelligence" class="control-label"></label>
                <input asp-for="Intelligence" class="form-control" min="3" max="30" />
            </div>
            <div class="form-group">
                <label asp-for="Wisdom" class="control-label"></label>
                <input asp-for="Wisdom" class="form-control" min="3" max="30" />
            </div>
            <div class="form-group">
                <label asp-for="Charisma" class="control-label"></label>
                <input asp-for="Charisma" class="form-control" min="3" max="30" />
            </div>
            <div class="form-group">
                <label asp-for="ProficiencyBonus" class="control-label">Proficiency Bonus</label>
                <input asp-for="ProficiencyBonus" class="form-control" min="2" max="6" />
            </div>

            <button type="submit" class="btn btn-success">Create</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>

        </form>

    </div>

</div>

